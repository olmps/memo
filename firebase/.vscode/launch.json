{
  "version": "0.3.0",
  "configurations": [
    {
      "name": "Debug core tests",
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "-r", "ts-node/register",
        "-r", "tsconfig-paths/register",
        "--recursive", "${workspaceRoot}/test/core/**/*.spec.ts",
        "--no-timeouts",
        "--exit"
      ]
    },
    // TODO(matuella): How to attach to `mocha` process instead of "firebase emulators:exec:"?
