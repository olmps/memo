{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "memo://memo.schemas/public-collection",
  "title": "Public Collection",
  "description": "Properties of a Collection, parent of Memos.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "category": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "locale": {
      "type": "string",
      "minLength": 1
    },
    "contributors": {
      "type": "array",
      "items": {
        "allOf": [{ "$ref": "collection-contributors#" }]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "resources": {
      "type": "array",
      "items": {
        "allOf": [{ "$ref": "collection-resources#" }]
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "id",
    "name",
    "description",
    "tags",
    "category",
    "contributors",
    "resources"
  ]
}