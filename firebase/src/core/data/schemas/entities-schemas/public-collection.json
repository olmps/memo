{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "memo://memo.schemas/public-collection",
  "title": "Public Collection",
  "description": "Properties of a Collection, parent of Memos.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" }
        }
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "locale": {
      "type": "string"
    },
    "contributors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "url": { "type": "string" },
          "avatarUrl": { "type": "string" }
        }
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "type": { "type": "string" },
          "url": { "type": "string" }
        }
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "id",
    "name",
    "description",
    "tags",
    "category",
    "contributors",
    "resources"
  ]
}