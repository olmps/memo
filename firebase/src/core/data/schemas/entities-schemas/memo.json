{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "memo://memo.schemas/memo",
  "title": "Memo",
  "description": "Properties of a Memo.",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "question": {
      "type": "array",
      "items": {
        "allOf": [{ "$ref": "memo-content#" }]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "answer": {
      "type": "array",
      "items": {
        "allOf": [{ "$ref": "memo-content#" }]
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "id",
    "question",
    "answer"
  ]
}