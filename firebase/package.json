{
  "name": "memo-firebase",
  "engines": {
    "node": "14"
  },
  "private": true,
  "scripts": {
    "lint": "eslint '**/*.ts'",
    "watch": "tsc -w",
    "test": "npm run firestore-rules-test",
    "firebase-deploy": "firebase deploy",
    "firestore-deploy": "firebase deploy --only firestore",
    "firestore-rules-test": "firebase emulators:exec --only firestore 'mocha -r ts-node/register --file \"./test/firestore-rules/setup.ts\" --recursive \"./test/firestore-rules/**/*.spec.ts\" --timeout 10000 --exit'",
    "functions-fetch-env": "firebase functions:config:get > src/functions/.runtimeconfig.json",
    "functions-build": "npm run lint && tsc -p tsconfig.functions.json",
    "functions-serve": "npm run functions-build && npm run watch | firebase emulators:start --only auth,functions,firestore --inspect-functions",
    "functions-deploy": "firebase deploy --only functions",
    "dummy-script": "ts-node src/scripts/dummy-script.ts"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.x",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.x",
    "@typescript-eslint/eslint-plugin": "^4.x",
    "@typescript-eslint/parser": "^4.x",
    "eslint": "^7.x",
    "eslint-config-prettier": "^8.x",
    "eslint-plugin-prettier": "^3.x",
    "mocha": "^9.0.3",
    "prettier": "^2.x",
    "ts-node": "^10.x"
  }
}
