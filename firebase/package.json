{
  "name": "memo-firebase",
  "engines": {
    "node": "14"
  },
  "private": true,
  "scripts": {
    "postinstall": "run-p install:*",
    "setup-ci": "npm i && run-p install:*",
    "install:core": "cd src/core && npm i",
    "watch": "tsc -w",
    "lint": "run-p --print-label lint:*",
    "lint:core": "eslint 'src/core/**/*.ts'",
    "lint:scripts": "eslint 'src/scripts/**/*.ts'",
    "lint:test": "eslint 'test/**/*.ts'",
    "deploy": "firebase deploy",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:functions": "firebase deploy --only functions",
    "test": "run-p --print-label test:*",
    "test:core": "mocha -r ts-node/register -r tsconfig-paths/register --recursive \"./test/core/**/*.spec.ts\" --timeout 10000 --exit",
    "test:firebase-rules": "firebase emulators:exec --only firestore 'mocha -r ts-node/register -r tsconfig-paths/register --file \"./test/firebase-rules/setup.ts\" --recursive \"./test/firebase-rules/**/*.spec.ts\" --timeout 10000 --exit'",
    "build": "run-p --print-label build:*",
    "build:functions": "tsc -p tsconfig.functions.json",
    "functions:serve": "run-s --print-label build:functions functions:start-emulators watch",
    "functions:fetch-env": "firebase functions:config:get > .runtimeconfig.json",
    "functions:start-emulators": "firebase emulators:start --only auth,functions,firestore --inspect-functions",
    "scripts:sync-collections": "ts-node -r tsconfig-paths/register src/scripts/sync-collections.ts"
  },
  "imports": {
    "#presentation/*": "./src/core/dist/presentation/*.js",
    "#data/*": "./src/core/dist/data/*.js",
    "#domain/*": "./src/core/dist/domain/*.js",
    "#faults/*": "./src/core/dist/faults/*.js",
    "#utils/*": "./src/core/dist/utils/*.js"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.x",
    "@types/mocha": "^9.0.x",
    "@types/node": "^14.x",
    "@types/sinon": "^10.0.x",
    "@typescript-eslint/eslint-plugin": "^4.32.x",
    "@typescript-eslint/parser": "^4.32.x",
    "eslint": "^7.32.x",
    "eslint-config-prettier": "^8.3.x",
    "eslint-plugin-prettier": "^4.0.x",
    "firebase-admin": "^9.11.x",
    "firebase-tools": "^9.18.x",
    "mocha": "^9.1.x",
    "npm-run-all": "^4.1.x",
    "prettier": "^2.4.x",
    "sinon": "^10.0.x",
    "ts-node": "^10.2.x",
    "tsconfig-paths": "^3.11.x",
    "typescript": "^4.5.x"
  }
}
